<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/userimageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/ConditionFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/ConditionFound"
        android:layout_toRightOf="@id/userimageView"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/AnimalType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ConditionFound"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="38dp"
        android:layout_toRightOf="@id/userimageView"
        android:gravity="center_horizontal"
        android:text="AnimalType"
        android:textAlignment="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ConditionFound"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="49dp"
        android:layout_toRightOf="@id/userimageView"
        android:gravity="center_horizontal"
        android:text="Location"
        android:textAlignment="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/Breed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Location"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="19dp"
        android:layout_toRightOf="@id/userimageView"
        android:gravity="center_horizontal"
        android:text="Breed"
        android:textAlignment="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Breed"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="679dp"
        android:layout_toRightOf="@id/userimageView"
        android:gravity="center_horizontal"
        android:text="Description"
        android:textAlignment="center"
        android:textSize="14sp" />

</RelativeLayout>